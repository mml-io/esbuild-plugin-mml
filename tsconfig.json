{
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "./test/generated",
    "./dist"
  ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2021",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@mml-io/esbuild-plugin-mml": [
        "./src/index.ts"
      ]
    }
  }
}
