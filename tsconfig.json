{
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "./test/generated",
    "./dist",
    "./test/src/circular-a.ts",
    "./test/src/circular-b.ts",
    "./test/src/typescript-error.ts",
    "./test/scratch/watch/circular-a.ts",
    "./test/scratch/watch/circular-b.ts",
    "./test/scratch/watch/typescript-error.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2021",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "@mml-io/esbuild-plugin-mml": [
        "./src/index.ts"
      ]
    }
  }
}
